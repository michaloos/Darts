<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:darts"
             xmlns:valueConverters="clr-namespace:darts.ValueConverters"
             x:Class="darts.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <valueConverters:SelectedItemEqualsConverter x:Key="SelectedItemEqualsConverter" />
            <valueConverters:ShootRoundConverter x:Key="ShootRoundConverter"/>
            <valueConverters:IsSelectedItemConverter x:Key="IsSelectedItemConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
