<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:darts.ViewModel"
             x:Class="darts.MainPage"
             BackgroundColor="{AppThemeBinding Light=#F5F5F7, Dark=#1C1C1E}">
    <ContentPage.BindingContext>
        <viewModel:MainPageViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="30">
            
            <!-- Header Section -->
            <Grid Grid.Row="0" RowDefinitions="Auto,Auto" RowSpacing="8">
                <Label Text=" Darts Manager"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                <Label Grid.Row="1"
                       Text="Wybierz opcję z menu poniżej"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#6E6E6E, Dark=#BEBEBE}" />
            </Grid>

            <!-- Menu Cards -->
            <VerticalStackLayout Grid.Row="1" Spacing="16">
                
                <!-- Nowa gra Card -->
                <Border StrokeThickness="0" Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4F46E5" Offset="0.0" />
                            <GradientStop Color="#7C3AED" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NewGamePageCommand}" />
                    </Border.GestureRecognizers>
                    
                    <Grid Padding="20" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                        <Border HeightRequest="50" WidthRequest="50"
                                BackgroundColor="#80FFFFFF"
                                HorizontalOptions="Center" VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Image Source="./Resources/Images/target.svg" WidthRequest="24" HeightRequest="24"/>
                        </Border>

                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label Text="Nowa gra"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Rozpocznij nową rozgrywkę w darta"
                                   FontSize="14"
                                   TextColor="#E0E7FF" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

                <!-- Gracze Card -->
                <Border StrokeThickness="0" Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#059669" Offset="0.0" />
                            <GradientStop Color="#047857" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding UsersPageCommand}" />
                    </Border.GestureRecognizers>
                    
                    <Grid Padding="20" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                        <Border HeightRequest="50" WidthRequest="50"
                                BackgroundColor="#80FFFFFF"
                                HorizontalOptions="Center" VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Image Source="./Resources/Images/players.svg" WidthRequest="24" HeightRequest="24"/>
                        </Border>

                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label Text="Gracze"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Zarządzaj listą graczy i ich profilami"
                                   FontSize="14"
                                   TextColor="#D1FAE5" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

                <!-- Historia Card -->
                <Border StrokeThickness="0" Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#DC2626" Offset="0.0" />
                            <GradientStop Color="#B91C1C" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HistoryPageCommand}" />
                    </Border.GestureRecognizers>
                    
                    <Grid Padding="20" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                        <Border HeightRequest="50" WidthRequest="50"
                                BackgroundColor="#80FFFFFF"
                                HorizontalOptions="Center" VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Image Source="./Resources/Images/history.svg" WidthRequest="24" HeightRequest="24"/>
                        </Border>

                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label Text="Historia"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Przeglądaj wyniki poprzednich gier"
                                   FontSize="14"
                                   TextColor="#FECACA" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

                <!-- Dodatkowa karta z informacjami lub ustawieniami (opcjonalnie) -->
                <Border StrokeThickness="1"
                        Stroke="{AppThemeBinding Light=#E5E5E7, Dark=#3A3A3C}"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2C2C2E}"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                        <Border HeightRequest="40" WidthRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#374151}"
                                HorizontalOptions="Center" VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Label Text="ℹ️"
                                   FontSize="18"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center" />
                        </Border>

                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label Text="Darts Manager v1.0"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Aplikacja do zarządzania grami w darta"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#6E6E6E, Dark=#BEBEBE}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
